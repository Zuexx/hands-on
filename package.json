{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "pnpm run css:prod && remix build",
    "prebuild": "rimraf ./public/build \"./app/styles/**/*.css\"",
    "dev": "concurrently \"pnpm run css:watch\" \"remix dev\"",
    "start": "remix-serve build",
    "typecheck": "tsc",
    "css:build": "postcss styles --base styles --dir app/styles",
    "css:watch": "pnpm run css:build -- --watch",
    "css:prod": "pnpm run css:build -- --env production"
  },
  "dependencies": {
    "@remix-run/node": "^1.16.0",
    "@remix-run/react": "^1.16.0",
    "@remix-run/serve": "^1.16.0",
    "firebase": "^9.21.0",
    "isbot": "^3.6.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.16.0",
    "@remix-run/eslint-config": "^1.16.0",
    "@types/react": "^18.2.2",
    "@types/react-dom": "^18.2.3",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.0.1",
    "cssnano": "^6.0.1",
    "daisyui": "^2.51.6",
    "eslint": "^8.39.0",
    "postcss": "^8.4.23",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "tailwindcss": "^3.3.2",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=14"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}